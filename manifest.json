{
  "manifest_version": 2,
  "name": "1stdibs.com Notifier",
  "description": "This extension puts a red bar on the top of the site if you're on production.",
  "author": "Liam Dickson",
  "version": "2.0",
  "minimum_chrome_version": "10.0",
  "permissions": [
    "storage",
    "tabs",
    "http://*.1stdibs.com/",
    "https://*.1stdibs.com/"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://*.1stdibs.com/*"
      ],
      "js": ["jquery.min.js", "underscore-min.js"],
      "css": ["notice.css"]
    }
  ],
  "background": {
    "page": "background.html"
  }
}